{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "types": [
      "bun-types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "paths": {
    "@/*": [
      "src/*"
    ],
    "@shared/*": [
      "shared/*"
    ]
  },
  "exclude": [
    "dist",
    "**/*.test.ts"
  ]
}